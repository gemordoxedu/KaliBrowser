<script>
    // Button actions
    function requestFullScreen() {
        const elem = document.documentElement;
        if (elem.requestFullscreen) {
            elem.requestFullscreen();
        } else if (elem.mozRequestFullScreen) {
            elem.mozRequestFullScreen();
        } else if (elem.webkitRequestFullscreen) {
            elem.webkitRequestFullscreen();
        } else if (elem.msRequestFullscreen) {
            elem.msRequestFullscreen();
        }
    }
    function closeWindow() { window.close(); }
    function minimizeWindow() { alert("Minimizing the window is not supported by this browser."); }

    // Swap the button actions:
    // Red (closeButton) now minimizes
    document.getElementById('closeButton').addEventListener('click', function() {
        alert("Minimizing the window is not supported by this browser.");
    });
    // Green (minimizeButton) now closes
    document.getElementById('minimizeButton').addEventListener('click', closeWindow);
    // Fullscreen remains as is
    document.getElementById('fullscreenButton').addEventListener('click', requestFullScreen);

    // Typewriter placeholder effect
    const placeholders = [
        "root@kali:~# search Youtube...",
        "root@kali:~# search Gemors Daddy...",
        "root@kali:~# search Penetration Testing...",
        "root@kali:~# search BlackBoxAI...",
        "root@kali:~# search HoodMrLean...",
        "root@kali:~# search Visual Studio...",
        "root@kali:~# search GemorClientRB...",
        "root@kali:~# search Solara Rat...",
        "root@kali:~# search Cracked Xworm..."
    ];

    const searchBox = document.getElementById('searchQuery');
    const typewriterSpan = document.getElementById('typewriter');

    let currentPlaceholder = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typingSpeed = 100;

    function typePlaceholder() {
        const fullText = placeholders[currentPlaceholder];

        if (isDeleting) {
            searchBox.placeholder = fullText.substring(0, charIndex - 1);
            charIndex--;
            if (charIndex === 0) {
                isDeleting = false;
                currentPlaceholder = (currentPlaceholder + 1) % placeholders.length;
                typingSpeed = 40;
            } else {
                typingSpeed = 50;
            }
        } else {
            searchBox.placeholder = fullText.substring(0, charIndex + 1);
            charIndex++;
            if (charIndex === fullText.length) {
                isDeleting = true;
                typingSpeed = 100;
            } else {
                typingSpeed = 100;
            }
        }
        setTimeout(typePlaceholder, typingSpeed);
    }

    document.addEventListener('DOMContentLoaded', () => {
        typePlaceholder();
    });
</script>
